pipeline {
    agent any // Specifies the pipeline can run on any available agent
    stages {
        stage('Cleanup') {
            steps {
                cleanWs()
            }
        }

        stage('Clone Repository') {
            steps {
                checkout scm
            }
        }

        stage('Build and Run Docker Image') {
            steps {
                sh 'docker stop dev-container || true && docker rm dev-container || true'
                sh 'docker build -t realsahilthakur/devops-bookstore .'
                sh "docker tag realsahilthakur/devops-bookstore realsahilthakur/devops-bookstore:develop-${env.BUILD_ID}"
                sh 'docker run -d --name dev-container -p 8081:80 realsahilthakur/devops-bookstore'
            }
        }

        stage('Test Container') {
            steps {
                sh 'curl -I http://192.168.58.130:8081'
            }
        }

        stage('Push Image to Docker Hub') {
            steps {
                withCredentials([usernamePassword(credentialsId: 'dockerhub-pass', usernameVariable: 'USERNAME', passwordVariable: 'PASSWORD')]) {
                    sh 'docker login -u ${USERNAME} -p ${PASSWORD}'
                    sh 'docker push realsahilthakur/devops-bookstore'
                    sh "docker push realsahilthakur/devops-bookstore:develop-${env.BUILD_ID}"                    
                }
            }
        }
        stage('Deploy to Staging') {
            when {
                branch 'master' // Only trigger for the master branch
            }
            steps {
                build 'BookStaging'
            }
        }
      stage ('After development'){
        steps{
            echo "staging sutomated"
        }
      }
    }
}
