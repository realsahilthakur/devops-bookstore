pipeline {
    agent any
    stages {
        stage('Build and run docker image') {
            steps {
                sh '''
                    docker stop stagingcontainer || true
                    docker rm stagingcontainer || true

                    docker pull realsahilthakur/devopsbookstore:latest

                    docker run --name stagingcontainer -d -p 8082:80 realsahilthakur/devopsbookstore:latest
                '''
            }
        }
        stage('Testing') {
            steps {
                sh '''
                    # Test the running container
                    curl -I http://192.168.196.139:8082
                '''
            }
        }
    }
}
