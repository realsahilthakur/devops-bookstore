pipeline {
    agent any

    stages {
        stage('Pull Docker Image') {
            steps {
                sh '''
                    docker stop book-staging || true
                    docker rm book-staging || true
                    docker pull realsahilthakur/devops-bookstore:latest
                '''
            }
        }

        stage('Run Staging Container') {
            steps {
                sh '''
                    docker run --name book-staging -d -p 8082:80 realsahilthakur/devops-bookstore:latest
                '''
            }
        }

        stage('Test Application') {
            steps {
                sh '''
                    curl -I http://192.168.58.130:8082
                '''
            }
        }
    }

    post {
        always {
            echo 'Staging pipeline completed!'
        }
    }
}
